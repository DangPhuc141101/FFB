<link rel="stylesheet" href="/stylesheets/Register.css">

<div id="idRegister" class="modalRegister">
  <form class="modalRegister-content" action="/accounts/register" method="post">
    <div class="cancelcontainer">
      <span onclick="document.getElementById('idRegister').style.display='none'" class="close" title="Thoát">&times;</span>
    </div>
    <div class="containerRegister">
      <h1 class="title-register">Đăng ký</h1>
      <hr>
      <label for="email"><b>Email</b></label>
      <input class="input" type="text" placeholder="Nhập email của bạn" name="email" required>

      <label for="username"><b>Số điện thoại</b></label>
      <input class="input" type="text"  placeholder="Nhập số điện thoại của bạn" name="username" required maxlength="10">

      <label for="psw"><b>Mật khẩu</b></label>
      <input class="input" type="password" placeholder="Nhập mật khẩu của bạn" name="password" required>

      <label for="psw-repeat"><b>Xác nhận mật khẩu</b></label>
      <input class="input" type="password"  placeholder="Nhập lại mật khẩu của bạn" name="psw-repeat" required>
      

      <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>
      <button type="submit" class="registerbtn">Đăng ký</button>
    </div>
  </form>
</div>

<script>
// Get the modalRegister
var modalRegister = document.getElementById('idRegister');

// When the user clicks anywhere outside of the modalRegister, close it
window.onclick = function(event) {
  if (event.target == modalRegister) {
    modalRegister.style.display = "none";
  }
}
</script>
